    @model List<Course>

    <link href="~/css/table.css" rel="stylesheet" />

    <div>
        <a class="nav-link text-dark" asp-area="" asp-controller="Course" asp-action="Create">Create New Course</a>
        <table>
            <tr>
                <th>
                    Course Name
                </th>
                <th>
                    Teacher ID
                </th>
                <th>
                    Capacity
                </th>
                <th>
                    Delete
                </th>
            </tr>
            @foreach (Course course in Model)
            {
                <tr>
                    <td>
                        @course.CourseName
                    </td>
                    <td>
                        @course.TeacherId
                    </td>
                    <td>
					@course.CourseCapacity
                    </td>
                    <td>
                        <form asp-action="Delete" asp-controller="Course" method="post" style="display:contents;">
                        <input type="hidden" name="CourseId" value="@course.CourseId" />
                            <button type="submit" onclick="return confirm('Are you sure you want to delete this course?');">X</button>
                        </form>
                    </td>
                </tr>
            }
        </table>
    </div>
