@model List<Room>

<link href="~/css/table.css" rel="stylesheet" />

<div>
    <a class="nav-link text-dark" asp-area="" asp-controller="Room" asp-action="Create">Create New Room</a>
    <table>
        <tr>
            <th>
                Room Name
            </th>
            <th>
                Delete
            </th>
        </tr>
        @foreach (Room room in Model)
        {
            <tr>
                <td>
                    @room.RoomName
                </td>
                <td>
                    <form asp-action="Delete" asp-controller="Room" method="post" style="display:contents;">
                        <input type="hidden" name="RoomId" value="@room.RoomId" />
                        <button type="submit" onclick="return confirm('Are you sure you want to delete this room?');">X</button>
                    </form>
                </td>
            </tr>
        }
    </table>
</div>
