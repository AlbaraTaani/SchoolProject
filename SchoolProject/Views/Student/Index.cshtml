<!-- note : veiw request just one model -->
@model List<Student>

<link href="~/css/table.css" rel="stylesheet" />

<div>

	<a class="nav-link text-dark" asp-area="" asp-controller="Student" asp-action="Create" >Create New Student</a>
    <table>
        <tr>
            <th>
                Student Name
            </th>
            <th>
                Age
            </th>
            <th>
				Image
			</th>
            <th>
                Delete
            </th>
        </tr>
        @foreach (Student student in Model)
        {
            <tr>
                <td>
                    @student.StudentName
                </td>
                <td>
                    @student.StudentAge
                </td>
                <td>
                    
                        <img src="~/StudentPictures/@student.PhotoName" width="50" height="50" />
                    
                </td>
                <td>
                    <form asp-action="Delete" asp-controller="Student" method="post"  style="display:contents;">
                        <input type="hidden" name="StudentId" value="@student.StudentId" />
                        <button type="submit" onclick="return confirm('Are you sure you want to delete this student?');">X</button>
                    </form>
                </td>
            </tr>
        }
    </table>
</div>


<style
    table {
    width: 100%;
    border-collapse: collapse;
}

tr:nth-of-type(odd) {
    background: #60a75d;
}

tr {
    background: #2ab624;
    color: white;
    font-weight: bold;
}

th, td {
    border: 1px solid #ccc;
    padding: 6px;
    text-align: left;
}

</style>