@model List<Teacher>

<link href="~/css/table.css" rel="stylesheet" />

<div>
    <a class="nav-link text-dark" asp-area="" asp-controller="Teacher" asp-action="Create">Create New Teacher</a>
    <table>
        <tr>
            <th>
                Teacher Name
            </th>
            <th>
                Age
            </th>
            <th>
                Delete
            </th>
        </tr>
        @foreach (Teacher teacher in Model)
        {
            <tr>
                <td>
                    @teacher.TeacherName
                </td>
                <td>
                    @teacher.TeacherAge
                </td>
                <td>
                    <form asp-action="Delete" asp-controller="Teacher" method="post" style="display:contents;">
                        <input type="hidden" name="TeacherId" value="@teacher.TeacherId" />
                        <button type="submit" onclick="return confirm('Are you sure you want to delete this teacher?');">X</button>
                    </form>
                </td>
            </tr>
        }
    </table>
</div>
